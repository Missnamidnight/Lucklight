{% extends 'base.html.twig' %}

{% block title %}Inicio de sesión{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Tienes una sesión iniciada como {{ app.user.username }}, <a href="{{ path('app_logout') }}"  >Salir</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal"  >Bienvenido a Lucklight</h1>
    <label for="inputEmail" style="  margin-left: 40px;">CORREO ELECTRÓNICO</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" style="width: 500px;
 margin-left: 40px;" required autofocus>
    <label for="inputPassword" style="  margin-left: 40px;">CONTRASEÑA</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" style="width: 500px;
 margin-left: 40px;"required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}">
<br>

    <button class="btn btn-lg btn-secondary" type="submit" style="margin-left: 40px;">
Iniciar seseión    </button>
<br><br><br><br>
	  <img style="margin-left:70%;" src="images/perro-banner.png">

</form>
{% endblock %}
